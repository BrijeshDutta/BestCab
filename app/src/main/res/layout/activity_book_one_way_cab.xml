<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bookOneWayCabActivity"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="bestcab.com.bestcab.activity.BookOneWayCabActivity">

    <!-- :nextFocusUp and :nextFocusLeft have been set to the id of this component
    to prevent the dummy from receiving focus again -->
    <AutoCompleteTextView android:id="@+id/autotext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:nextFocusUp="@id/autotext"
        android:nextFocusLeft="@id/autotext"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:id="@+id/cardViewBookOneWayCab"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_onewaycabFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/onewaycabFrom"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:paddingRight="20dp"
                    android:paddingLeft="30dp"
                    android:background="@drawable/location_spinner"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_onewaycabTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/onewaycabTo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="To"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="30dp"
                    android:background="@drawable/location_spinner"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_onewaycabPickupLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/onewaycabPickupLocation"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Pick up location"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:paddingRight="20dp"
                    android:inputType="text"
                    android:paddingLeft="40dp"
                    android:background="@drawable/location_spinner"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_onewaycabDropLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/onewaycabDropLocation"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Drop location"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:paddingRight="20dp"
                    android:inputType="text"
                    android:paddingLeft="40dp"
                    android:background="@drawable/location_spinner"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_onewaycabPickUpDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/onewaycabPickUpDate"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Pick up date"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:paddingRight="20dp"
                    android:inputType="text"
                    android:paddingLeft="40dp"
                    android:background="@drawable/datepickerbackground"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_onewaycabPickUpTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/onewaycabPickUpTime"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Pick up time"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:paddingRight="20dp"
                    android:inputType="text"
                    android:paddingLeft="40dp"
                    android:background="@drawable/timepickerbackground"/>
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bsearchforcab"
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardTitle"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:text="@string/search_for_cab"
                    />


            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
